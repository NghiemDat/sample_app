<li>
  <%= gravatar_for user, size: Settings.gravatar_for_user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user.current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: t(".sure") } %>
  <% end %>
</li>
